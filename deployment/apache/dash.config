<VirtualHost *:80>
    ServerName cgfi-dev1.cgfi.ac.uk
    ServerAlias 192.171.169.117

    RewriteEngine on
    RewriteCond %{SERVER_NAME} =cgfi-dev1.cgfi.ac.uk
    RewriteRule ^ https://%{SERVER_NAME}%{REQUEST_URI} [END,QSA,R=permanent]
</VirtualHost>

<VirtualHost *:443>
    ServerName cgfi-dev1.cgfi.ac.uk
    ServerAlias 192.171.169.117

    WSGIDaemonProcess climate_narrative python-path=/storage/climate_narrative:/storage/climate_narrative/venv/lib/python3.x/site-packages python-home=/storage/climate_narrative/venv home=/storage/climate_narrative
    WSGIScriptAlias / /storage/climate_narrative/deployment/apache/dash.wsgi

    WSGIProcessGroup climate_narrative
    WSGIApplicationGroup %{GLOBAL}


    <Directory /storage/climate_narrative>
        Require all granted
    </Directory>


    # Serve static assets (images, CSS, JS)
    Alias /assets /storage/climate_narrative/assets
    <Directory /storage/climate_narrative/assets>
        Require all granted
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/app_error.log
    CustomLog ${APACHE_LOG_DIR}/app_access.log combined

    SSLEngine on
    SSLProtocol all -SSLv2 -SSLv3
    SSLCipherSuite HIGH:3DES:!aNULL:!MD5:!SEED:!IDEA
    Include /etc/letsencrypt/options-ssl-apache.conf
    SSLCertificateFile /etc/letsencrypt/live/cgfi-dev1.cgfi.ac.uk/cert.pem
    SSLCertificateKeyFile /etc/letsencrypt/live/cgfi-dev1.cgfi.ac.uk/privkey.pem
    SSLCertificateChainFile /etc/letsencrypt/live/cgfi-dev1.cgfi.ac.uk/chain.pem
</VirtualHost>
